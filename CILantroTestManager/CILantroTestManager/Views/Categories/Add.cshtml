@model CILantroTestManager.ViewModels.Categories.CategoriesAddViewModel

<h2>Add category</h2>

@using (Html.BeginForm("Add", "Categories", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group row">
        @Html.Label("Name", new { @class = "col-md-4 col-form-label" })
        <div class="col-md-8">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", autofocus = true })
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-8 offset-md-4">
            <input type="submit" value="Add" class="btn btn-default" />
        </div>
    </div>
}