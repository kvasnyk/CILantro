@model CILantroTestManager.ViewModels.Tags.TagsAddViewModel

<h2>Add tag</h2>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("Add", "Tags", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.Label("Name", new { @class = "col-md-4 control-label" })
                <div class="col-md-8">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-4 col-md-8">
                    <input type="submit" value="Add" class="btn btn-default" />
                </div>
            </div>
        }
    </div>
</div>