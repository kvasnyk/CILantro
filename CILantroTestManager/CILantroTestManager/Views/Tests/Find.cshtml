@model CILantroTestManager.ViewModels.Tests.TestsFindViewModel

<h2>Find tests</h2>

@if (Model.TestCandidates.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">File name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                var i = 1;
            }

            @foreach (var testCandidate in Model.TestCandidates)
            {
                <tr>
                    <td>@i</td>
                    <td>@testCandidate.FileName</td>
                    <td>
                        <a href="@Url.Action("Add", "Tests", new { testName = testCandidate.FileName })" type="button" class="btn btn-xs btn-success">
                            <span class="glyphicon glyphicon-plus"></span>
                            Add
                        </a>
                    </td>
                </tr>

                i++;
            }
        </tbody>
    </table>
}
else
{
    <text>No test candidates could be found.</text>
}